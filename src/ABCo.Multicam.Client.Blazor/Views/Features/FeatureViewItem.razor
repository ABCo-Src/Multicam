@using ABCo.Multicam.Client.Blazor.Views.Features.Switcher
@using ABCo.Multicam.Client.ViewModels.Features;
@using ABCo.Multicam.Client.ViewModels.Features.Switcher;
@inherits VMBoundComponent<IProjectFeaturesListItemVM>

<!-- Mobile appearance -->
<div class="mobile">
	<div class="strip"></div>
	<div class="content btnLikeHighlight" @onclick=VM.OpenMobileView>
		<FeatureTitle VM="VM.Feature" />
		<div class="rightArrow"><img src="_content/ABCo.Multicam.Client.Blazor/img/icons/smallRightArrow.svg" /></div>
	</div>
</div>

<!-- Desktop appearance -->
<div class="desktop">
	<div class="titlebar">
		<div class="title">
			<FeatureTitle VM="VM.Feature" />
		</div>
		<a class="hyperlink editBtn" @onclick=VM.ToggleEdit>@VM.EditBtnText</a>
	</div>
	<div class="bordered">
		<div class="content">
			@if (VM.Feature.Content is SwitcherFeatureVM switcherVM)
			{
				<SwitcherFeature VM="switcherVM" />
			}
			else
			{
				<p>Unsupported feature!</p>
			}
		</div>
	</div>
</div>