@using ABCo.Multicam.Client.Presenters.Features.Switchers.Config.Dummy;
@inherits VMBoundComponent<ISwitcherDummyConfigVM>

<div class="grid">
	<p class="gridTitle">Mix Block Count:</p>
	<select class="combo mixBlockCount" value="@VM.SelectedMixBlockCount" @onchange="e => { VM.SelectedMixBlockCount = (string)e.Value!; VM.OnUIChange(); }">
		@foreach (var item in VM.MixBlockCountOptions)
		{
			<option>@item</option>
		}
	</select>
</div>

<ul class="mixBlocks">
	@foreach (var item in VM.MixBlockVMs)
	{
		<li class="indexedListItem">
			<DummyMBConfigEditor VM="item" />
		</li>
	}
</ul>

