@using ABCo.Multicam.Client.Presenters.Features.Switchers;
@inherits VMBoundComponent<ISwitcherMixBlocksVM>

@if (VM.MixBlocks.Length == 0)
{
	<p>Connect to the device to load buses.</p>
}
else
{
	<ul class="mixBlocks switcherContentStrip">

		@foreach (var mixBlock in VM.MixBlocks)
		{
			<li class="switcherContentStripWidth">
				<SwitcherMixBlock VM="mixBlock" />
			</li>
		}
	</ul>
}