@using ABCo.Multicam.Client.Blazor
@using ABCo.Multicam.Client.ViewModels.Features.Switcher;
@inherits VMBoundComponent<ISwitcherMixBlockVM>

<div class="grid">
	<p class="mixBlockTitle">@VM.MixBlockTitle</p>
	<p class="programTag">Program</p>
	<ul class="inputs buttonRow programInputs">
		@foreach (var input in VM.ProgramBus)
		{
			<li>
				<SwitcherButton VM="input" />
			</li>
		}
	</ul>

	<p class="previewTag">Preview</p>
	<ul class="inputs buttonRow previewInputs">
		@foreach (var input in VM.PreviewBus)
		{
			<li>
				<SwitcherButton VM="input" />
			</li>
		}
	</ul>

	<ul class="control buttonRow">
		<li>
			<SwitcherButton VM="VM.CutButton" />
		</li>
	</ul>
</div>

