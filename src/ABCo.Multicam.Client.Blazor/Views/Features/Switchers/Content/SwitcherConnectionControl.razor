@using ABCo.Multicam.Client.Presenters.Features.Switchers;
@inherits VMBoundComponent<ISwitcherConnectionVM>

@if (VM.ShowConnectionInfo)
{
<div class="connectionControl switcherContentStrip">
	<p class="statusText">@VM.StatusText</p>

	@if (VM.ShowConnectionButton)
	{
		<a class="connectBtn hyperlink" @onclick=VM.ToggleConnection>@VM.StatusButtonText</a>
	}
</div>
}