@using ABCo.Multicam.Core.Features.Switchers;
@using ABCo.Multicam.UI.ViewModels.Features.Switcher;
@using ABCo.Multicam.UI.ViewModels.Features.Switcher.Types;
@inherits VMBoundComponent<ISwitcherConfigVM>

<div class="grid">
	<p class="gridTitle gridTag1">Type:</p>
	<select class="combo" @bind="VM.SelectedItem">
		@foreach (var opt in VM.Items)
		{
			<option>@opt</option>
		}
	</select>
</div>

<div class="inner">
	@if (VM.SwitcherType == SwitcherType.Dummy)
	{
		<DummyConfigEditor VM="(DummySwitcherConfigVM)VM.CurrentConfig!" />
	}
</div>

