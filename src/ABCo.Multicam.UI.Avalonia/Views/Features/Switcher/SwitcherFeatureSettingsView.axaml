<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ABCo.Multicam.UI.Avalonia.Views.Features.Switcher.SwitcherFeatureSettingsView">

	<StackPanel>

		<!-- Switcher Type -->
		<TextBlock Classes="FEPTitleText">Switcher Connection</TextBlock>
		
		<Grid Classes="FEPOuterMargin" RowDefinitions="Auto,5,Auto,5,Auto">

			<Grid.ColumnDefinitions>
				<ColumnDefinition MinWidth="90" Width="Auto" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>

			<!-- Type -->
			<TextBlock Classes="FEPGridLeft">Type:</TextBlock>
			<TextBox Grid.Column="1" />

			<!-- Something Else -->
			<TextBlock Grid.Row="2" Classes="FEPGridLeft">Connection:</TextBlock>
			<TextBox Grid.Row="2" Grid.Column="1" />

			<!-- Something Else -->
			<TextBlock Grid.Row="4" Classes="FEPGridLeft">IP Address:</TextBlock>
			<TextBox Grid.Row="4" Grid.Column="1" />
		</Grid>
		
		<Rectangle Classes="FEPContentSeparator" />
	</StackPanel>
</UserControl>