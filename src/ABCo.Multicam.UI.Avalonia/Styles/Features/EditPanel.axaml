<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
    </Design.PreviewWith>

	<!-- FEP = Feature Edit Panel -->
	<Style Selector="Grid.FEPOuterMargin, TextBox.FEPOuterMargin">
		<Setter Property="Margin" Value="10,10,10,0" />
	</Style>

	<Style Selector="TextBlock.FEPGridLeft">
		<Setter Property="Margin" Value="0,0,10,0" />
		<Setter Property="FontWeight" Value="Bold" />
		<Setter Property="VerticalAlignment" Value="Center" />
	</Style>

	<Style Selector="TextBlock.FEPTitleText">
		<Setter Property="Margin" Value="10,10,10,0" />
		<Setter Property="TextDecorations" Value="Underline" />
		<Setter Property="HorizontalAlignment" Value="Center" />
	</Style>

	<Style Selector="TextBlock.FEPEditDesc">
		<Setter Property="Foreground" Value="{DynamicResource ForegroundFaded}" />
		<Setter Property="HorizontalAlignment" Value="Center" />
	</Style>

	<Style Selector="Rectangle.FEPContentSeparator">
		<Setter Property="Margin" Value="0,10,0,0" />
		<Setter Property="Fill" Value="{DynamicResource PanelInnerSeparator}" />
		<Setter Property="Height" Value="2" />
	</Style>

</Styles>