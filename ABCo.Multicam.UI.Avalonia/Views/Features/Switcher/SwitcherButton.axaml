<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:viewmodels="using:ABCo.Multicam.UI.ViewModels.Features.Switcher"
			 xmlns:converters="using:ABCo.Multicam.UI.Avalonia.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 Margin="0 0 10 10"
             x:Class="ABCo.Multicam.UI.Avalonia.Views.Features.Switcher.SwitcherButton"
			 x:DataType="viewmodels:SwitcherButtonVM">
	
	<Button 
		Classes="SwitcherButton" 
		Content="{Binding Text}" 
		Background="{Binding Status, Converter={x:Static converters:SwitcherFeatureStatusToColor.Instance}}" 
		Command="{Binding Click}"/>

</UserControl>