<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ABCo.Multicam.UI.Avalonia.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />

		<!-- Styles -->
		<StyleInclude Source="/Styles/Buttons.axaml" />
		<StyleInclude Source="/Styles/Windows.axaml" />
		
    </Application.Styles>

	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				
				<!-- Resources -->
				<ResourceInclude Source="/Theming/Icons.axaml" />
				<ResourceInclude Source="/Theming/Colors.axaml" />
				
			</ResourceDictionary.MergedDictionaries>	
		</ResourceDictionary>
	</Application.Resources>
</Application>
